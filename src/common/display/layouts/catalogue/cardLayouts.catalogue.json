{
    "Card": {
        "item": [
            {
                "onPress": [
                    {
                        "type": "SendEvent",
                        "arguments": [
                            "cardSelected",
                            "${data.id}" 
                        ]
                    }
                ],
                "item": [
                    {
                        "item": [
                            {
                                "items": [
                                    {
                                        "item": [
                                            {
                                                "imageSource": "${data.imageSrc}",
                                                "type": "AlexaImage",
                                                "imageWidth": "@imageWidth",
                                                "imageHeight": "@imageHeight",
                                                "imageAlignment": "top",
                                                "scale": "best-fill",
                                                "align": "top",
                                                "borderRadius": "4"
                                            }
                                        ],
                                        "shrink": 1,
                                        "type": "Container",
                                        "height": "33.75vh"
                                    },
                                    {
                                        "text": "${data.sequence}. ${data.title}",
                                        "fontSize": "@fontSizeSmall",
                                        "fontWeight": "@fontWeightMedium",
                                        "maxLines": "@cardContentTitleMaxLines",
                                        "letterSpacing": "@letterSpacingNormal",
                                        "color": "#222328",
                                        "fontFamily": "@fontFamilyRomanSans",
                                        "textAlignVertical": "center",
                                        "textAlign": "left",
                                        "type": "Text",
                                        "paddingLeft": "@spacing2XSmall",
                                        "paddingRight": "@spacingXSmall",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "layoutDirection": "LTR",
                                        "backgroundColor": "#C10E21",
                                        "borderColor": "#C10E21",
                                        "borderWidth": "2",
                                        "type": "Frame",
                                        "width": "100vw",
                                        "height": "1.25vh"
                                    }
                                ],
                                "alignItems": "center",
                                "justifyContent": "spaceBetween",
                                "type": "Container",
                                "width": "100%",
                                "height": "100%",
                                "paddingTop": "@spacingXSmall"
                            }
                        ],
                        "type": "Frame",
                        "id":"cardFrame",
                        "inheritParentState": true,
                        "style": "cardFrame"
                    }
                ],
                "type": "TouchWrapper",
                "id": "${data.id}",
                "paddingBottom": "@spacingLarge",
                "paddingRight": "@spacingSmall",
                "paddingStart": "@spacingXSmall",
                "spacing": "@spacingBetweenCards"
            }
        ]
    }
}