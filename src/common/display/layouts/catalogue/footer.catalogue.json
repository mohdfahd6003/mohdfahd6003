{
    "when": "${@viewportProfile != @hubRoundSmall}",
    "type": "Container",
    "id":"rect.catalogue.footerContainer",
    "height": "12.5vh",
    "minHeight": "12.5vh",
    "paddingLeft": "@marginHorizontal",
    "paddingRight": "@marginHorizontal",
    "items": [
        {
            "type": "Frame",
            "item": [
                {
                    "type": "Text",
                    "id":"rect.catalogue.footerText",
                    "style": "footerText",
                    "text": "${payload.content.properties.transformedHintText}"
                }
            ]
        }
    ]
}