{
    "type":"Container",
    "id": "rect.welcome.footer",
    "height":"12.5vh",
    "paddingLeft":"@marginHorizontal",
    "paddingRight":"@marginHorizontal",
    "items":[
      {
         "items": [
             {
                 "text": "click for heart",
                 "type": "Text"
             }
         ],
         "onPress": [
             {
                 "type": "SendEvent",
                 "arguments": [
                     "textWasPressed",
                     "Send this data to the skill"
                 ],
                 "components": [
                     "myText"
                 ]
             }
         ],
         "type": "TouchWrapper",
         "id": "heartControl"
     },
       {
          "type":"Frame",
          "item":[
             {
                "type":"Text",
                "style":"rect.welcome.footer",
                "text":"${payload.content.properties.transformedHintText}"
             }
          ]
       }
    ]
}