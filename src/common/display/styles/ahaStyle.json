{  "logoContainer": {
        "values": [
            {
                "when": "${@viewportShape == @viewportShapeRound}",
                "justifyContent": "center"
            },
            {
                "when": "${@viewportShape == @viewportShapeRectangle}",
                "justifyContent": "end"
            }
        ]
    },
    "welcomeText":{
        "values":[
            {
                "fontFamily": "@fontFamilyRomanSans",
                "fontSize": "8.5vh",
                "lineHeight": "@lineHeightNormal",
                "letterSpacing": "@letterSpacingNormal",
                "fontWeight": "400"        

            }
        ]
    },
    "image.header":{
        "values":[
            {
                "imageAlignment": "center",
                "imageScale": "best-fit",
                "imageAspectRatio": "widescreen"
        

            }
        ]
    },
    "mainText.explain":{
        "values":[
            {
                "fontFamily": "@fontFamilyRomanSans",
                "fontSize": "4vh",
                "lineHeight": "@lineHeightNormal",
                "letterSpacing": "@letterSpacingNormal",
                "color": "#FFFFFF",
                "fontWeight": "400",
                "textAlign": "left"    

            }
        ]
    },
    "title.explain":{
        "values":[
            {
            "fontFamily": "@fontFamilyRomanSans",
            "fontSize": "6vh",
            "lineHeight": "@lineHeightNormal",
            "letterSpacing": "@letterSpacingNormal",
            "color": "#FFFFFF",
            "maxLines": 2,
            "fontWeight": "500",
            "paddingLeft": "6.25vw",
            "textAlign": "left"
            }
        ]
    },
    "footerText": {
        "values": [
            {
                "textAlign": "left",
                "fontStyle": "italic",
                "fontWeight": "400",
                "textAlignVertical": "center",
                "opacity": 1,
                "color": "#222328",
                "height": "12.5vh",
                "width": "100vw",
                "fontFamily": "Bookerly",
                "fontSize": "@fontSizeMedium",
                "lineHeight": 1.5
            }
        ]
    }
  
}