{
    "configurations": [
        
        {
            "name": "Debug Alexa Skill (Node.js)",
            "type": "node",
            "request": "launch",
            "program": "${command:ask.debugAdapterPath}",
            "args": [
                "--accessToken",
                "${command:ask.accessToken}",
                "--skillId",
                "amzn1.ask.skill.94d0fde4-c3e8-4ca7-ae12-083ddde36482",
                "--handlerName",
                "handler",
                "--skillEntryFile",
                "${workspaceFolder}/src/index.js",
                "--region",
                "EU"
            ],
            "cwd": "${workspaceFolder}/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }

    ]
}